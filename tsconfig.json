{
   "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "sourceMap": true,
        "sourceRoot": "./",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./lib"
    },

    "include": [
        "components/**/*.ts",
        "components/*.ts",
        "interfaces/*.ts",
        "package.json"
    ],

    "exclude": [
        "node_modules"
    ]
}